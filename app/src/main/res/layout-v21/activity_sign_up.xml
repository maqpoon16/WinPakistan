<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activites.SignUpActivity">

<ScrollView
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/black"
        app:layout_constraintHeight_percent="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtcreataccount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Create New Account"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

        </TextView>

        <LinearLayout



            android:id="@+id/loginlayout"
            android:padding="10sp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="@string/UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:textColor="@color/white"
                android:drawablePadding="20sp"
                android:drawableStart="@drawable/ic_baseline_person_outline_24"
                android:textSize="15sp"
                android:paddingStart="1dp"
                android:hint="@string/select_username"

                android:textColorHint="@color/gray_border"
                android:id="@+id/edtusername"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:textStyle="bold"
                android:textColor="@color/yellow"

                android:text="@string/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:textColor="@color/white"
                android:drawablePadding="20sp"
                android:drawableStart="@drawable/ic_baseline_person_outline_24"
                android:textSize="15sp"
                android:paddingStart="1dp"
                android:hint="@string/type_your_name"

                android:textColorHint="@color/gray_border"
                android:id="@+id/edtname"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="@string/date_of_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:onClick="SetDOB"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:drawablePadding="20sp"
                android:paddingStart="1dp"
                android:paddingTop="15dp"
                android:hint="@string/click_to_select_dob"
                android:textColorHint="@color/gray_border"
                android:id="@+id/dtdob"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="RtlSymmetry,UsingOnClickInXml"
                app:drawableStartCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="@string/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText

                android:textColor="@color/white"
                android:textSize="15sp"
                android:inputType="number"
                android:drawablePadding="20sp"
                android:drawableStart="@drawable/ic_baseline_phone_callback_24"


                android:paddingStart="1dp"
                android:hint="@string/type_your_contact"

                android:textColorHint="@color/gray_border"
                android:id="@+id/edtcontact"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </EditText>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="@string/email_optional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText

                android:textSize="15sp"
                android:textColor="@color/white"

                android:drawablePadding="20sp"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:inputType="textEmailAddress"

                android:paddingStart="1dp"
                android:hint="@string/type_your_contact"

                android:textColorHint="@color/gray_border"
                android:id="@+id/edtemail"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="RtlSymmetry">

            </EditText>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="@string/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText

                android:textColor="@color/white"

                android:textSize="15sp"
                android:drawablePadding="20sp"
                android:drawableStart="@drawable/ic_baseline_lock_open_24"
                android:paddingStart="1dp"
                android:hint="@string/full_address"
                android:inputType="textPassword"
                android:textColorHint="@color/gray_border"
                android:id="@+id/edtpassword"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </EditText>
            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="@string/address_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:textColor="@color/white"

                android:textSize="15sp"
                android:drawablePadding="20sp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:paddingStart="1dp"
                android:inputType="textPostalAddress"
                android:hint="@string/type_your_address"
                android:textColorHint="@color/gray_border"
                android:id="@+id/edtaddress"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </EditText>

            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:text="@string/choose_your_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

                <RadioGroup
                    android:id="@+id/rdgender"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:id="@+id/rdmale"
                        android:paddingStart="10dp"
                        android:buttonTint="@color/yellow"
                        android:textColor="@color/yellow"
                        android:text="Male "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rdfemale"
                        android:paddingLeft="10dp"
                        android:buttonTint="@color/yellow"
                        android:textColor="@color/yellow"
                        android:text="Female "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RadioButton>

                </RadioGroup>

            <TextView
                android:textColor="@color/yellow"
                android:text="Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:textColor="@color/white"

                android:textSize="15dp"
                android:inputType="number"
                android:drawablePadding="20sp"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"


                android:paddingLeft="1dp"
                android:hint="Enter your Age"

                android:textColorHint="@color/gray_border"
                android:id="@+id/edtage"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </EditText>




            <androidx.appcompat.widget.AppCompatButton
                android:onClick="OnClickedCreateAccount"
                android:text="Create Account"
                android:textColor="@color/white"
                android:background="@drawable/walletcardbackround"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatButton>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/bluehard"
                android:text="OR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"


                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"

                    android:textColor="@color/bluehard"
                    android:text="Already have an Account!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:onClick="alreadyaccount"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/swipe_refresh_red"
                    android:text="Click Here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>