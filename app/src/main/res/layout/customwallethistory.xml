<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="60dp" >



           <androidx.constraintlayout.widget.ConstraintLayout

               android:background="@drawable/leatherbackground"
               android:orientation="horizontal"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               tools:ignore="MissingConstraints">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_margin="10dp"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:onClick="gotoprofile"
                   android:id="@+id/imagewallethistory"


                   android:src="@mipmap/person1"
                   android:layout_width="50dp"
                   android:layout_height="50dp">

               </de.hdodenhof.circleimageview.CircleImageView>
               <View
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/view"
                   app:layout_constraintLeft_toRightOf="@+id/imagewallethistory"
                   android:layout_marginHorizontal="10dp"
                   android:padding="5dp"
                   android:layout_marginStart="15dp"
                   android:background="@color/gray"
                   android:layout_width="3dp"
                   android:layout_height="35dp"/>

               <LinearLayout
                   android:layout_margin="5dp"
                   app:layout_constraintWidth_percent="0.5"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/leaner"
                   app:layout_constraintLeft_toRightOf="@+id/view"
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_height="match_parent">


                   <TextView

                       android:textColor="@color/black"
                       android:textSize="12sp"
                       android:textStyle="bold"
                       android:text="20-Sep-2021"
                       android:id="@+id/txttimedate"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                   </TextView>

                   <TextView
                       android:textSize="10sp"
                       android:textColor="@color/gray"
                       android:text="Lucky Draw Name Here"
                       android:id="@+id/txtluckydrawtitle"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                   </TextView>

                   <TextView
                       android:textSize="12sp"
                       android:id="@+id/txtpaymentmethod"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Paid By Coins"
                       android:textColor="@color/category_business"
                       android:textStyle="bold">

                   </TextView>

               </LinearLayout>


               <View
                   android:layout_margin="10dp"
                    android:id="@+id/view2"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/leaner"
                   android:background="@color/gray"
                   android:layout_width="3dp"
                   android:layout_height="30dp">

               </View>

               <TextView
                   android:id="@+id/txtpaidcashorcoins"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   android:text="10000\nCoins"
                   android:textColor="@color/category_business"
                   android:textSize="10sp"
                   android:textStyle="bold"
                   app:layout_constraintBottom_toBottomOf="@+id/view2"
                   app:layout_constraintLeft_toRightOf="@+id/view2"
                   app:layout_constraintTop_toTopOf="@+id/view2"/>

           </androidx.constraintlayout.widget.ConstraintLayout>










</androidx.constraintlayout.widget.ConstraintLayout>