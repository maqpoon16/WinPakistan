<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="90dp"


    >





           <androidx.constraintlayout.widget.ConstraintLayout

               android:background="@drawable/leatherbackground"


               android:orientation="horizontal"

               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintWidth_percent="0.9"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="70dp"
               tools:ignore="MissingConstraints">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_marginLeft="10dp"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"

                   android:id="@+id/imaghsitory"


                   android:src="@mipmap/coins2"
                   android:layout_width="50dp"
                   android:layout_height="50dp">

               </de.hdodenhof.circleimageview.CircleImageView>
               <View
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/view"
                   app:layout_constraintLeft_toRightOf="@+id/imaghsitory"
                   android:layout_margin="2dp"
                   android:padding="5dp"
                   android:layout_marginLeft="15dp"
                   android:background="@color/gray"
                   android:layout_width="3dp"
                   android:layout_height="60dp">

               </View>
               <LinearLayout
                   app:layout_constraintWidth_percent="0.5"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/leaner"
                   app:layout_constraintLeft_toRightOf="@+id/view"

                   android:layout_marginLeft="15dp"
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">



                   <TextView
                       android:textColor="@color/black"
                       android:text="20-Sep-2021"
                       android:id="@+id/txthisorydate"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                   </TextView>
                   <TextView

                       android:textColor="@color/black"
                       android:textSize="10dp"
                       android:textStyle="bold"
                       android:text="Husain Ali khan"
                       android:id="@+id/txthisoryluckyname"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                   </TextView>


                   <TextView
                       android:id="@+id/txthisorypayedby"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Paid By Coins"
                       android:textColor="@color/category_business"
                       android:textStyle="bold">

                   </TextView>

               </LinearLayout>


               <View



                   android:id="@+id/view2"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"

                   app:layout_constraintLeft_toRightOf="@id/leaner"

                   android:background="@color/gray"
                   android:layout_width="3dp"
                   android:layout_height="60dp">

               </View>


                   <TextView
                       app:layout_constraintLeft_toRightOf="@+id/view2"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       android:textColor="@color/category_business"

                       android:layout_marginLeft="5dp"
                       android:gravity="center"

                       android:textSize="12dp"
                       android:textStyle="bold"
                       android:text="12000000"
                       android:id="@+id/txthistoryamount"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                   </TextView>



           </androidx.constraintlayout.widget.ConstraintLayout>










</androidx.constraintlayout.widget.ConstraintLayout>