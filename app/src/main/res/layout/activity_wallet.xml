<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activites.WalletActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.94"
        app:layout_constraintHeight_percent="0.9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            app:cardElevation="20dp"
            android:id="@+id/coinscarview"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_width="match_parent"
            app:layout_constraintHeight_percent="0.25"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/winnergredient"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="bold"
                    android:textSize="34dp"
                    android:textColor="@color/colorWhite"
                    android:text="Wallet Detail"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/colorWhite"
                        android:text="Coins in Wallet"
                         app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView


                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:textColor="@color/colorWhite"
                        android:text="1000"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <ImageView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@mipmap/wallet"
                    android:layout_width="200dp"
                    android:layout_height="100dp">

                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                app:layout_constraintHeight_percent="0.8"
               app:layout_constraintTop_toBottomOf="@+id/coinscarview"
                android:layout_width="match_parent"
                android:layout_height="0dp">



            <RelativeLayout

                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/relative"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent="0.99"
                app:layout_constraintHeight_percent="0.7"
                android:layout_width="0dp"
                android:layout_height="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout

                        android:id="@+id/linertop"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@drawable/leaderboardgredient"
                        app:layout_constraintHeight_percent="0.06"
                        app:layout_constraintWidth_percent="0.9"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal">

                    </LinearLayout>
                    <LinearLayout

                        android:id="@+id/carleaderboard"
                        app:layout_constraintTop_toBottomOf="@id/linertop"
                        android:background="@drawable/winnergredient"


                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintWidth_percent="0.99"
                        app:layout_constraintHeight_percent="0.9"

                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal">
                    </LinearLayout>
                    <LinearLayout


                        app:layout_constraintTop_toTopOf="@id/carleaderboard"
                        android:id="@+id/linertop2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@drawable/leaderboardgredient2"
                        app:layout_constraintHeight_percent="0.13"
                        app:layout_constraintWidth_percent="0.8"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="Lucky Draw History"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">




                        </LinearLayout>



                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/linaerpointsid"
                        app:layout_constraintTop_toBottomOf="@+id/linertop2"
                        android:layout_marginBottom="40dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"

                        app:layout_constraintWidth_percent="0.9"
                        app:layout_constraintHeight_percent="0.3"
                        android:layout_width="0dp"
                        android:layout_height="0dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/carpoints"

                            android:layout_marginLeft="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            app:cardCornerRadius="20dp"
                            app:layout_constraintWidth_percent="0.3"
                            app:layout_constraintHeight_percent="0.9"

                            app:cardBackgroundColor="@color/colorGrey"
                            android:layout_width="0dp"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:text="Totel Win Gifts"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:text="30"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <ImageView
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:src="@drawable/stars_24"
                                    android:text="30"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </ImageView>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/carprize"

                            android:layout_marginLeft="10dp"
                            app:layout_constraintLeft_toRightOf="@id/carpoints"
                            app:cardElevation="10dp"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            app:cardCornerRadius="20dp"
                            app:layout_constraintWidth_percent="0.3"
                            app:layout_constraintHeight_percent="0.9"

                            app:cardBackgroundColor="@color/colorGrey"
                            android:layout_width="0dp"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_gravity="center"
                                    android:maxLines="2"
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:text="Money Spend"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:text="3000 RS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <ImageView
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:src="@drawable/ic_baseline_money_24"
                                    android:text="30"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </ImageView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cartimer"

                            android:layout_marginLeft="13dp"
                            app:layout_constraintLeft_toRightOf="@id/carprize"
                            app:cardElevation="10dp"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            app:cardCornerRadius="20dp"
                            app:layout_constraintWidth_percent="0.3"
                            app:layout_constraintHeight_percent="0.9"

                            app:cardBackgroundColor="@color/colorGrey"
                            android:layout_width="0dp"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:text="Totel Entery"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:text="00:12:23"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <ImageView
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:src="@drawable/ic_baseline_watch_later_24"
                                    android:text="30"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </ImageView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>


            </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>